---
interface Props {
  variant: "primary" | "secondary";
  rowSize: 1 | 2 | 3 | 4;
}
const { variant, rowSize } = Astro.props;

const rowSizeMap = {
  1: "grid-cols-1",
  2: "grid-cols-2",
  3: "grid-cols-2 lg:grid-cols-3",
  4: "grid-cols-2 lg:grid-cols-4",
};

const gridCols = rowSizeMap[rowSize] ?? "grid-cols-3";
---

{
  variant === "primary" ? (
    <article class="flex flex-col gap-4">
      <h2 class="text-4xl font-bold max-w-[30rem] mb-10">
        <slot name="title">Lorem, ipsum dolor sit amet consecut</slot>
      </h2>
      <ul class:list={["grid gap-20 px-20 self-center", gridCols]}>
        <slot />
      </ul>
    </article>
  ) : (
    <h2>Secondary</h2>
  )
}
