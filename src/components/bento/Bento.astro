---
interface Props {
  columns?: "1" | "2" | "3" | "4" | "5" | "6";
  gap?: "sm" | "md" | "lg" | "xl";
}

const gapMap = {
  sm: "gap-4",
  md: "gap-8",
  lg: "gap-12",
  xl: "gap-16",
};

const colMap = {
  1: "grid-cols-1",
  2: "grid-cols-2",
  3: "grid-cols-3",
  4: "grid-cols-4",
  5: "grid-cols-5",
  6: "grid-cols-6",
};

const { columns = "6", gap = "md" } = Astro.props;

const gapClass = gapMap[gap];
const colClass = colMap[columns];
---

<div class:list={["grid w-full", gapClass, colClass]}>
  <div class="col-span-2">
    <div class="w-full h-full bg-primary rounded"></div>
  </div>
  <div class="col-span-4">
    <div class="w-full aspect-video bg-primary rounded"></div>
  </div>
  <div class="col-span-3">
    <div class="w-full aspect-video bg-primary rounded"></div>
  </div>
  <div class="col-span-3">
    <div class="w-full aspect-video bg-primary rounded"></div>
  </div>
  <div class="col-span-1">
    <div class="w-full h-full bg-primary rounded"></div>
  </div>
  <div class="col-span-1 h-full">
    <div class="w-full h-full bg-primary rounded"></div>
  </div>
  <div class="col-span-2">
    <div class="w-full aspect-video bg-primary rounded"></div>
  </div>
  <div class="col-span-2">
    <div class="w-full aspect-video bg-primary rounded"></div>
  </div>
</div>
